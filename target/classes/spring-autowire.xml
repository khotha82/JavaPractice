<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="foo" class="com.example.autowire.Foo"></bean>
    <bean name="bar" class="com.example.autowire.Bar"></bean>
    <bean name="autowireByDefault" class="com.example.autowire.SimpleTarget" autowire="default" lazy-init="true"></bean>
    <bean name="autowireByName" class="com.example.autowire.SimpleTarget" autowire="byName" lazy-init="true"></bean>
    <bean name="autowireByType" class="com.example.autowire.SimpleTarget" autowire="byType" lazy-init="true"></bean>
    <bean name="autowireByConstructor" class="com.example.autowire.SimpleTarget" autowire="constructor"
          lazy-init="true"></bean>

</beans>